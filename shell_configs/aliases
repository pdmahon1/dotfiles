alias ltr='ls -ltr --color=auto'
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

# recursively removes .DS_Store files from a directory and its subdirectories
alias rmds="find . -name '.DS_Store' -type f -delete"

# Linux version of OSX pbcopy and pbpaste
# USE: cat ~/.bashrc | pbcopy; pbpaste
alias pbcopy=’xsel — clipboard — input’
alias pbpaste=’xsel — clipboard — output’

# have user confirm y/n before overwriting an existing file
alias cp="cp -i"
alias mv='mv -i'
alias rm='rm -i'

# docker
alias dcu='docker-compose up --build'
alias dockerclean='docker rm $(docker ps -a -q -f status=exited) > /dev/null 2>&1'
alias dps="docker ps"
alias drm="docker rm"

# used by the Stream Deck automator to copy Lombok's class-level annoations
alias LBC="~/.scripts/lombok_annotations"

alias gcb='./gradlew clean build --warning-mode all'
